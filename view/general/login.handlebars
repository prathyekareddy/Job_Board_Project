<div class="container" id="loginnnCOntainer">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    {{#if auth}}
        {{> navigationAuthPartial }}
    {{else}}
        {{> navigationUnauthPartial }}
    {{/if}}
</nav>

<main id="log">
    <div class="container" >
        <div class="row">
            <div class="col-md-6">
            <img src="/public/login.png" alt="">
        </div>
        <div class="col-md-6" id="loginField">
            <div>
                <h4 class = "first">Log In</h4>
                <div class = "login-Form-div">
                    <form action="/login" method="POST" class="login-form" id="login-form">
                    <label id = "login-Form"> </label>
                        
                          <div class="form-group">
                            <label>Username</label>
                                <input type="text" id="username" name="username" placeholder="Username" value="{{login.username}}" class="form-control">
                            <div class="error-username" id="error-username"></div>
                        </div>
                          <div class="form-group">
                        <label>Password</label>
                        <input type="password" id="password" name="password" placeholder="Password" value="{{login.password}}" class="form-control">
                        <div class="error-password" id="error-password" ></div>
                        <br>
                        <div class="error-form" id="error-form" ></div>
                        {{#if hasError}}
                        <div class="error-form error" id="error-validationform">Username or password is wrong. Please try again!</div>
                        {{/if}}
                        </div>
                   
                    <br>
                    <button type="submit" class="btnLogin" >Log in</button>
                    </form>
                </div>
                <div class="signupButton">
                    Didn't have account?
                    
                 <a class="btnSignUp" href="/signup">Sign Up</a>
                    </div>
            </div>
        </div>
        </div>
        <script src="/public/js/login.js"></script>
    </div>
